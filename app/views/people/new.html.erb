<div class="page-header">
  <h1>New Person</h1>
</div>


<%= form_for @person, html: {class: "form-horizontal"} do |f| %>
  <% if @project.errors.any? %>
      <div class="col-sm-offset-1 col-sm-12">
        <div class='col-sm-6'>
          <div class="alert alert-danger">

          <h5><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h5>
          <ul>
          <% @project.errors.full_messages.each do |message| %>
            <li><%= message %></li>
      <% end %>
        </div>
      </div>
    </div>
      </ul>
  <% end %>
  <div class="form-group">
    <%= f.label :first_name, class: "control-label col-sm-2" %>
    <div class="col-sm-4">
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :last_name, class: "control-label col-sm-2" %>
    <div class="col-sm-4">
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :date_of_birth, class: "control-label col-sm-2" %>
    <div class="col-sm-4">
      <%= f.date_field :date_of_birth, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-4 col-sm-offset-2">
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to "cancel", people_path, class: "btn btn-default" %>
    </div>
  </div>
<% end %>
